#sidebar.sidebar.responsive{"data-sidebar" => "true", "data-sidebar-hover" => "true", "data-sidebar-scroll" => "true"}
  :javascript
    try{ace.settings.check('sidebar' , 'fixed')}catch(e){}
  #sidebar-shortcuts.sidebar-shortcuts
    #sidebar-shortcuts-large.sidebar-shortcuts-large
      %button.btn.btn-success
        %i.menu-icon.fa.fa-tachometer
      %button.btn.btn-info
        %i.fa.fa-line-chart
      %button.btn.btn-warning
        %i.ace-icon.fa.fa-user
      %button.btn.btn-danger
        %i.ace-icon.fa.fa-power-off
      &nbsp;&nbsp;&nbsp
    #sidebar-shortcuts-mini.sidebar-shortcuts-mini

      %span.btn.btn-success
      %span.btn.btn-info
      %span.btn.btn-warning
      %span.btn.btn-danger
  .sidebar-shortcuts
  
  %ul.nav.nav-list{:style => "top: 0px;"}
    %li{:class => params[:controller] == "dashboard" ? "active" : ""}
      %a{:href => "/dashboard"}
        %i.menu-icon.fa.fa-tachometer
        %span.menu-text Dashboard
      %b.arrow
    %li{:class => params[:controller] == "categories" ? "active" : ""}
      %a{:href => "#{categories_url}"}
        %i.menu-icon.fa.fa-tachometer
        %span.menu-text Categories
      %b.arrow

    %li{:class => params[:controller] == "products" ? "active" : ""}
      %a{:href => "#{products_url}"}
        %i.menu-icon.fa.fa-tachometer
        %span.menu-text Products
      %b.arrow
    %li{:class => params[:controller] == "users" ? "active" : ""}
      %a{:href => "#{users_url}"}
        %i.menu-icon.fa.fa-tachometer
        %i.ace-icon.fa.fa-user
        %span.menu-text Users
      %b.arrow  
    %li{:class => params[:controller] == "carts" ? "active" : ""}
      %a{:href => "#{carts_url}"}
        %i.menu-icon.fa.fa-tachometer
        %span.menu-text Cart
      %b.arrow
  .nav-list
