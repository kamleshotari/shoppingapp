#sidebar.sidebar.responsive{"data-sidebar" => "true", "data-sidebar-hover" => "true", "data-sidebar-scroll" => "true"}
  #sidebar-shortcuts.sidebar-shortcuts
  %ul.nav.nav-list{:style => "top: 0px;"}
    %li{:class => params[:controller] == "dashboard" ? "active" : ""}
      %a{:href => "/dashboard"}
        %i.menu-icon.fa.fa-tachometer
        %span.menu-text Dashboard
      %b.arrow
    %li{:class => params[:controller] == "categories" ? "active" : ""}
      %a{:href => "#{categories_url}"}
        %i.menu-icon.fa.fa-tachometer
        %span.menu-text Categories
      %b.arrow

    %li{:class => params[:controller] == "products" ? "active" : ""}
      %a{:href => "#{products_url}"}
        %i.menu-icon.fa.fa-tachometer
        %span.menu-text Products
      %b.arrow
