= form_for @product, :html => {:class => "form-horizontal"} do |f|
  .form-group
    %label.col-sm-3.control-label.no-padding-right{:for => "form-field-1"} Title
    .col-sm-9
      = f.text_field :title, :class => "col-xs-10 col-sm-5", :placeholder => "Title"
      
  .form-group
    %label.col-sm-3.control-label.no-padding-right{:for => "form-field-1"} Description
    .col-sm-9
      = f.text_field :description, :class => "col-xs-10 col-sm-5", :placeholder => "Description"
  .form-group
    %label.col-sm-3.control-label.no-padding-right{:for => "form-field-1"} Price
    .col-sm-9
      = f.text_field :price, :class => "col-xs-10 col-sm-5", :placeholder => "Price"
  .form-group
    %label.col-sm-3.control-label.no-padding-right{:for => "form-field-1"} Category
    .col-sm-9
      = f.select :category_id, Category.all.collect{|c| [c.name, c.id]}, :prompt => "select", :class => "col-xs-10 col-sm-5"
  .form-group
    %label.col-sm-3.control-label.no-padding-right{:for => "form-field-1"} Uniq_code
    .col-sm-9
      = f.text_field :uniq_code, :class => "col-xs-10 col-sm-5", :placeholder => "Uniq_code"
  .form-group
    %label.col-sm-3.control-label.no-padding-right{:for => "form-field-1"} Code
    .col-sm-9
      = f.text_field :code, :class => "col-xs-10 col-sm-5", :placeholder => "Code"
  .form-group
    %label.col-sm-3.control-label.no-padding-right{:for => "form-field-1"} Color
    .col-sm-9
      = f.text_field :color, :class => "col-xs-10 col-sm-5", :placeholder => "Color"
  .form-group
    %label.col-sm-3.control-label.no-padding-right{:for => "form-field-1"} Select image
    .col-sm-9
      = f.file_field :image, :class => "col-xs-10 col-sm-5", :placeholder => "Select image"
  .space-4
  .clearfix.form-actions
    .col-md-offset-3.col-md-9
      = f.submit "Submit", :class => "btn btn-info"



