.register_account
  .wrap
    %h4.title Create an Account
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .col_1_of_2.span_1_of_2
        %div
          = f.text_field :first_name, :class => "form-control", :placeholder => "First name"
        %div
          = f.text_field :last_name, :class => "form-control", :placeholder => "Last name"
        %div
          = f.email_field :email, :class => "form-control", :placeholder => "Email"
        %div
          = f.password_field :password, :class => "form-control", :placeholder => "Password"
        %div
          = f.password_field :password_confirmation, :class => "form-control", :placeholder => "password confirmation"
      .col_1_of_2.span_1_of_2
        %div
          = f.text_field :address, :class => "form-control", :placeholder => "Address"
        %div
          = f.text_field :country, :class => "form-control", :placeholder => "Country"
        %div
          = f.text_field :phone_number, :class => "form-control", :placeholder => "Phone number"
          %br/ 
          %br/
      .clear
      = f.submit "Register", :class => "grey"
      .clear
        
      