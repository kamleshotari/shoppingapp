= form_for @category, :html => {:class => "form-horizontal"} do |f|
  .form-group
    %label.col-sm-3.control-label.no-padding-right{:for => "form-field-1"} Name
    .col-sm-9
      = f.text_field :name, :class => "col-xs-10 col-sm-5", :placeholder => "Name"
  .form-group
    %label.col-sm-3.control-label.no-padding-right{:for => "form-field-1"} Code
    .col-sm-9
      = f.text_field :code, :class => "col-xs-10 col-sm-5", :placeholder => "Code"
  .form-group
    %label.col-sm-3.control-label.no-padding-right{:for => "form-field-1"} Description
    .col-sm-9
      = f.text_field :code, :class => "col-xs-10 col-sm-5", :placeholder => "Description"
  .space-4
  .clearfix.form-actions
    .col-md-offset-3.col-md-9
      = f.submit "Submit", :class => "btn btn-info"
