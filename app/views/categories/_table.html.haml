%table#simple-table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th Name
      %th Code
      %th Description
      
  %tbody
    - @categories.each do |category|
      %tr
        %td= category.name
        %td= category.code
        %td= category.description
        %td{:width => "5%"}= link_to 'Show', category
        %td{:width => "5%"}= link_to 'Edit', edit_category_path(category)
        %td{:width => "5%"}= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }
%br/

